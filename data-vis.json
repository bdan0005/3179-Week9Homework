{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
      "format": {
        "type": "topojson",
        "feature": "countries"
      }
    },
    "projection": {
      "type": "mercator"
    },
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        },
        "encoding": {
          "shape": {
            "field": "geometry"
          }
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/bdan0005/3179-DataVis2/main/crude-birth-rate.csv"
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "lon",
            "type": "quantitative"
          },
          "latitude": {
            "field": "lat",
            "type": "quantitative"
          },
          "size": {
            "field": "pop",
            "type": "quantitative",
            "scale": {
              "type": "sqrt",  
              "range": [0, 1000]
            }
          },
          "color": {
            "value": "steelblue"
          },
          "tooltip": [
            {"field": "city", "type": "nominal", "title": "City"},
            {"field": "pop", "type": "quantitative", "title": "Population"}
          ]
        }
      }
    ]
  }
  
    