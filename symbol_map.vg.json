{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Crude Birth Rate Across the World",
  "data": {
    "url": "https://raw.githubusercontent.com/bdan0005/3179-Week9Homework/main/crude-birth-rate-cleaned.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bdan0005/3179-Week9Homework/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "value": "lightgray"
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "BirthRate",
          "type": "quantitative",
          "scale": {"range": [0, 1000]},
          "title": "Birth Rate"
        },
        "color": {
          "field": "BirthRate",
          "type": "quantitative",
          "scale": {"scheme": "viridis"},
          "title": "Crude Birth Rate"
        },
        "tooltip": [
          {"field": "Entity", "title": "Country"},
          {"field": "BirthRate", "title": "Crude Birth Rate"}
        ]
      }
    }
  ],
  "projection": {"type": "equalEarth"}
}
